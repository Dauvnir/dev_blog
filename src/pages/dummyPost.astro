---
import Layout from '../layouts/Layout.astro';
import Header from '../components_big/Header.astro';
import Footer from '../components_big/Footer.astro';
import Background from '../components_small/Background.astro';
import Post from '../components_big/Post.astro';
---

<Layout title="dummyPost" description="dummyPost">
  <Header />
  <Post />
  <Background />
  <Footer />
</Layout>

<style>
  body {
    grid-template-rows: [header] 5rem [rest] 1fr [footer] auto;
  }
  #navHeader {
    grid-area: header;
  }

  #post-wrapper {
    grid-area: rest;
  }

  #copyrightsFooter {
    grid-area: footer;
  }
</style>
