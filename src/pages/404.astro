---
import Layout from '../layouts/Layout.astro';
import Header from '../components_big/Header.astro';
import Footer from '../components_big/Footer.astro';
import Background from '../components_small/Background.astro';
import Error_message from '../components_small/404_message.astro';
---

<Layout title="404" description="404 page not found">
  <Header />
  <Error_message />
  <Background />
  <Footer />
</Layout>

<style>
  body {
    min-height: 100vh;
    width: 100%;

    display: grid;
    grid-template-columns: 1fr 300px;
    grid-template-rows: [header] 5rem [error] 1fr [footer] auto;
    position: relative;
    overflow-x: hidden;

    background: linear-gradient(
      in hsl to bottom,
      var(--primary-color) 68%,
      var(--secondary-color) 100%
    );
  }

  #navHeader {
    grid-area: header;
  }

  #error-wrapper {
    grid-area: error;
  }

  #copyrightsFooter {
    grid-area: footer;
  }
</style>
