---
import Layout from '../layouts/Layout.astro';
import Header from '../components_big/Header.astro';
import Footer from '../components_big/Footer.astro';
import Background from '../components_small/Background.astro';
import Recent_posts from '../components_big/Recent_posts.astro';
---

<Layout title="recentPosts" description="recentPosts">
  <Header />
  <Recent_posts />
  <Background />
  <Footer />
</Layout>

<style>
  body {
    grid-template-rows: [header] 5rem [posts] 1fr [footer] auto;
  }
  #navHeader {
    grid-area: header;
  }

  #recent_posts {
    grid-area: posts;
  }

  #copyrightsFooter {
    grid-area: footer;
  }
</style>
