<style>
  article {
    margin-top: 5rem;
    width: 100%;
    max-width: 65rem;
    display: flex;
    flex-direction: column;
    margin-inline: auto;
  }

  header {
    margin-bottom: 2.5rem;
    border-bottom: 1px solid rgba(125, 125, 125, 0.2);
    padding-bottom: 2.5rem;
    pointer-events: none;
  }

  h1 {
    font-weight: 800;
    margin-bottom: 1.5rem;
    line-height: 1.1;
  }

  .datetimeAuthorWrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.9em;
    opacity: 0.9;
  }

  .datetimeAuthorWrap address {
    display: flex;
    gap: 0.75rem;
    font-style: normal;
    align-items: center;
    font-weight: 600;
  }

  .datetimeAuthorWrap img {
    border-radius: 50%;
    width: 2.5rem;
    height: 2.5rem;
    object-fit: contain;
    object-position: center;
    border: 2px solid rgba(125, 125, 125, 0.2);
  }

  .imgMain {
    width: 100%;
    height: auto;
    max-height: 40rem;
    object-fit: contain;
    object-position: center;
    border-radius: 16px;
    margin-bottom: 3rem;
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.1);
  }

  /* Content Wrapper */
  .content {
    max-width: 48rem;
    margin-inline: auto;
    width: 100%;
    pointer-events: none;
  }

  p {
    margin-block: 1.5rem;
    font-size: 20px;
    line-height: 1.7;
    opacity: 0.9;
  }

  .intro {
    font-weight: 500;
    opacity: 1;
    margin-bottom: 3rem;
  }

  h2 {
    margin-top: 3rem;
    margin-bottom: 1rem;
    font-weight: 700;
    letter-spacing: -0.02em;
  }

  footer {
    max-width: 48rem;
    margin-inline: auto;
    width: 100%;
    display: flex;
    gap: 1.5rem;
    height: auto;
    flex-wrap: wrap;
    justify-content: flex-end;
    padding-top: 2rem;
    border-top: 1px solid rgba(125, 125, 125, 0.2);
  }

  footer a {
    display: flex;
    align-items: center;
    justify-content: center;
    color: inherit;
    transition: all 0.2s ease;
  }

  footer a svg:hover {
    transform: translateY(-2px);
  }

  footer svg {
    height: 32px;
    width: 32px;
    display: block;
  }
</style>
