---
import Layout from '../layouts/Layout.astro';
import Background from '../components_small/Background.astro';
import Header from '../components_big/Header.astro';
import Hero_section from '../components_big/Hero_section.astro';
import Post_cards from '../components_big/Post_cards.astro';
import Footer from '../components_big/Footer.astro';
---

<Layout title="Welcome to Astro Blog" description="A starter blog project built with Astro">
  <Header />
  <Hero_section />
  <Post_cards />
  <Footer />
  <Background />
</Layout>

<style>
  body {
    grid-template-rows:
      [header] 5rem [hero-section] calc(100vh - 5rem)
      [postCards] auto [footer] auto;
  }

  #navHeader {
    grid-area: header;
  }
  #hero_section {
    grid-area: hero-section;
  }
  main {
    grid-area: postCards;
  }
  #copyrightsFooter {
    grid-area: footer;
  }
</style>
